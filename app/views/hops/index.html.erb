      <!-- Main jumbotron for a primary marketing message or call to action -->

      <div class="jumbotron">
        <h1>Hops</h1>
        <p><%= link_to "Frontpage", root_path, class: "btn btn-primary btn-lg" %></p>
      </div>

    <div class="row">
        <div class="col-md-8">
          <% if can? :create, @hop %>
       <button type="button" class="btn btn-default"> <%= link_to 'Add hops', new_hop_path %></button>
       </div>
     <br>
       <div class="col-md-6" style="margin-top:10px;">
      <%= form_tag import_hops_path,  multipart: true do %>
  	  <%= file_field_tag :file %>
      <br>
  	  <%= submit_tag "Import", :class =>'btn r-button' %>
      <% end %>
    <% end %>
      </div>
    </div>
     <hr>
     <%= pie_chart Hop.group(:hops_grown).count %>

<div class="row">
          <div class="col-md-12">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>#</th>
                <th>Name</th>
                <th>Grown</th>
                <th>Info</th>
                <th>Use</th>
                <th>Example</th>
                <th>AA Range:</th>
                <th>Substitution</th>
              </tr>
            </thead>
            <tbody class="table-hover">
              <tr>
                  <% @hop.each do |hop| %>

				<td><%= hop.id %></td>
				<td><%= hop.hops_name %></td>
				<td><%= hop.hops_grown %></td>
				<td><%= hop.hops_info %></td>
				<td><%= hop.hops_use %></td>
				<td><%= hop.hops_example %></td>
				<td><%= hop.hops_aau_low %>-<%= hop.hops_aau_high %>%</td>
				<td><%= hop.hops_sub %></td>

              </tr>
          <% end %>

            </tbody>
          </table>

        </div>
</div>




